{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["es2019"],
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDirs": ["src", "tests"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
